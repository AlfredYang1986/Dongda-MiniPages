/**app.wxss**/
page {
    height: 100%;
}

button::after {
    border: none;
}

.content-wrapper {
    height: 100%;
    padding: 20rpx;
}
.scroll-view {
    background-image: url(https://dongdakid.com/assets/images/countingdown_bg@2x.png);
    background-repeat: no-repeat;
    background-size: 100% 100%; 
}
.content_has_padding {
    min-height: 100%;
    padding: 0 40rpx;
}

.content_no_padding {
    min-height: 100%;
    background-image: url(https://dongdakid.com/assets/images/countingdown_bg@2x.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.navigationBar {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 5;
    width: 100%;
    height: 88rpx;
    padding-top: 40rpx;
    background-color: transparent;
}

.cover {
    background-image: url(https://dongdakid.com/assets/images/cover@2x.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.navigationBar .backArea {
    float: left;
    position: relative;
    padding:0 40rpx;
    height: 88rpx;
    line-height: 88rpx;
}

.navigationBar .backArea image {
    margin-top: 8rpx;
    width: 72rpx;
    height: 72rpx;
}

.btn_back {
    position: absolute;
    left: 0;
    padding: 0 40rpx;
    width: 160rpx;
    height: 88rpx;
    background: transparent;
}

.navigationBar .navigationTitle {
    height: 88rpx;
    line-height: 88rpx;
    width: 160rpx;
    margin: 0 auto;
    color: #fff;
}

.nav {
    height: 44px;
    padding-top: 20px;
}

.iosx {
    padding-top: 44px;
}

.android {
    height: 48px;
    padding-top: 24px;
}

.top_blank_nav {
    padding-top: 130rpx;
}

.top_blank_android {
    padding-top: 138rpx;
}

.top_blank_iosx {
    padding-top: 178rpx;
}

.userinfo {
    padding: 160rpx 0 20rpx 20rpx;
}

.userinfo .user_avatar {
    display: inline-block;
    width: 72rpx;
    height: 72rpx;
    overflow: hidden;
    border-radius: 50%;
}

.userinfo .user_nickname {
    display: inline-block;
    padding-left: 40rpx;
    height: 72rpx;
    line-height: 72rpx;
    vertical-align: top;
    color: #fff;
}

.userinfo .scan {
    margin-left: 20rpx;
}

.normal {
    border: 3px solid #eaeff5;
}

.paid {
    border: 3px solid #C6C9DB;
    box-shadow: 0 4px 10px 0 rgba(59,105,181,0.2);
}

.king {
    border: 3px solid #F1BB69;
    box-shadow: 0 4px 10px 0 rgba(255,207,99,0.2);   
}

.bottom_blank {
    height: 40rpx;
}
