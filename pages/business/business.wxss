/* pages/business/business.wxss */
@import "../../utils/weui.wxss";
.content-wrapper {
    background-image: url(https://i.loli.net/2018/05/08/5af140ea1c9f1.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.navigationBar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 88rpx;
    padding-top: 40rpx;
    background-color: #4f5b8b; 
}
.navigationBar .backArea {
    float: left;
    position: relative;
    padding-left: 18rpx;
    height: 88rpx;
    line-height: 88rpx;
}
.navigationBar .backArea image {
    margin-top: 17rpx;
    width: 30rpx;
    height: 54rpx;
}
.btn_back {
    position: absolute;
    left: 0;
    width: 100rpx;
    height: 88rpx;
    background: transparent;
}
.navigationBar .navigationTitle {
    height: 88rpx;
    line-height: 88rpx;
    width: 160rpx;
    margin: 0 auto;
    color: #fff;
}




