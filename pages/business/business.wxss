.weui-cells_title {
    margin-top: 40rpx;
    margin-bottom: 10rpx;
    height: 34px;
    line-height: 34px;
    color: #fff;
}

.weui-cells_after-title {
    background-color: rgba(255, 255, 255, 0.1);
}

.weui-cells_after-title::before {
    border: 0;
}

.weui-cells_after-title::after {
    border: 0;
}

.weui-input {
    color: #fff;
}

/* 服务类型样式 */

.radio_item {
    text-align: center;
}

.radio {
    padding: 10rpx 20rpx;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4rpx;
    color: rgba(255, 255, 255, 0.1);
}

.radio::checked {
    background-color: #fff;
}

radio {
    display: none;
}
.active {
    background-color: rgba(255, 255, 255, .9);
    color: #000;
}
/* end 服务类型样式 */

/*  适应孩子年龄 样式 */

.age_flex {
    display: flex;
}

.item_input {
    flex: 2;
    height: 80rpx;
    line-height: 80rpx;
    /* border: 1px solid #eee; */
    text-align: center;
    color: #fff;
    background-color: rgba(255, 255, 255, 0.1);
}

.item_text {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
}

.picker_placeholder {
    color: rgba(255, 255, 255, 0.1);
}

/* end 适应孩子年龄 样式 */

