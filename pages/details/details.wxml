<!--pages/details/details.wxml-->
<view class='content_has_padding'>
    <view class="navigationBar {{android?'android':'nav'}} {{iosX?'iosx':''}}">
        <view class='backArea'>
            <image src='../../utils/images/icon_back@2x.png'></image>
            <button class='btn_back' size='mini' bindtap='backBeforePage'></button>
        </view>
        <view class='navigationTitle'>
            <text></text>
        </view>
    </view>
    <view class="{{android?'top_blank_android':'top_blank_nav'}} {{iosX?'top_blank_iosx':''}}"></view>
    <view class='brand_detail brand_info'>
        <view class='logo_area'>
            <text>{{businessInfo.service_type}}-{{businessInfo.service_leaf}}</text>
            <image src='{{businessInfo.logo}}'></image>
            <text>{{businessInfo.found_date}}</text>
        </view>
        <view class='brand_name'>{{businessInfo.brand_name}}</view>
        <view class='one_punch_line'>"{{businessInfo.onepunchline}}"</view>
        <view class='hight_light'>
            <view class='hight_light_item' wx:for="{{businessInfo.difference}}">
                  <image src='../../utils/images/icon_star@2x.png'></image>  
                <view>{{item}}</view>
            </view>
        </view>
        <view class='story'>{{businessInfo.story}}</view>
    </view>
    <view class='brand_address brand_info'>
        <image src='../../utils/images/icon_location@2x.png'></image><text>{{businessInfo.address}}</text>
    </view>
    <view class='brand_descript brand_info'>
        <view class='descript_title'>活动描述</view>
        <view class='descript_content'>{{businessInfo.description}}</view>
    </view>
    <!-- <navigator url='/pages/lists/lists'>测试-listpage</navigator> -->
    <view class='bottom_blank'>
        
    </view>
