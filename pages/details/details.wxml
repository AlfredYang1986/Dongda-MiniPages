<!--pages/details/details.wxml-->
<view class='content_no_padding'>
    <view class="navigationBar {{android?'android':'nav'}} {{iosX?'iosx':''}}">
        <view class='backArea'>
            <image src='../../utils/images/icon_back@2x.png'></image>
            <button class='btn_back' size='mini' bindtap='backBeforePage'></button>
        </view>
        <view class='navigationTitle'>
            <text>商家详情</text>
        </view>
    </view>
    <view class="userinfo" wx:if="{{canIuseAvatar}}">
        <open-data type="userAvatarUrl" class='user_avatar'></open-data>
        <open-data type="userNickName" class="user_nickname"></open-data>
    </view>
    <view class="userinfo" wx:if="{{!canIuseAvatar}}">
        <image src='{{submitData.apply.wechat_user.wechat_photo}}' class='user_avatar'></image>
        <text class="user_nickname">{{submitData.apply.wechat_user.wechat_name}}</text>
    </view>
    <view class='business_info'>
        <!-- <image src='{{businessInfo.logo}}'></image> -->
        <view>{{businessInfo.brand_name}}</view>
        <view>{{businessInfo.contact}}</view>
        <view>{{businessInfo.contact_no}}</view>
        <view>{{businessInfo.description}}</view>
        <view>{{businessInfo.difference}}</view>
        <view>{{businessInfo.found_date}}</view>
        <view>{{businessInfo.provider_id}}</view>
        <view>{{businessInfo.story}}</view>
        <view>{{businessInfo.short_name}}</view>
        <view>{{businessInfo.service_type}}</view>
        <view>{{businessInfo.service_leaf}}</view>
        <view>{{businessInfo.onepunchline}}</view>
        <view>{{businessInfo.address}}</view>
    </view>
</view>