    <view class='brand_detail brand_info'>
        <view class="logo_area  {{businessInfo.isPaid?'paid':'normal'}}">
            <image src='http://192.168.100.115:9000/assets/images/{{businessInfo.logo}}' mode='widthFix'></image>
