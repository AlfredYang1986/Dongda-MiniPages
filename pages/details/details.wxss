.brand_info {
    margin-top: 570rpx;
    padding: 40rpx;
    border-radius: 24rpx;
    background-color: #fff;
}

.brand_detail {
    position: relative;
}

.got_egg {
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    width: 590rpx;
    height: 590rpx;
    background: #ffdc6c;
    border-radius: 24rpx;
    color: #fff;
}

.got_egg .light {
    position: absolute;
    top: 0;
    width: 286rpx;
    height: 310rpx;
    left: 50%;
    transform: translateX(-50%);
    letter-spacing: 4rpx;
}

.got_egg .title {
    margin-top: 40rpx;
    text-align: center;
    height: 84rpx;
    font-size: 60rpx;
    line-height: 84rpx;
}

.got_egg .egg_type {
    position: relative;
    margin-top: 20rpx;
    text-align: center;
}

.got_egg .egg_type .egg_pic {
    width: 158rpx;
    height: 200rpx;
}

.got_egg .egg_type .egg_coin {
    position: absolute;
    bottom: 50rpx;
    right: 200rpx;
    width: 72rpx;
    height: 76rpx;
}

.got_egg .egg_type .egg_text {
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    font-weight: 700;
}

.got_egg .egg_explain {
    margin: 20rpx 0;
    line-height: 32rpx;
    text-align: center;
    opacity: 0.8;
    font-size: 22rpx;
}


.brand_detail .logo_area {
    position: absolute;
    top: -70rpx;
    left: 50%;
    transform: translateX(-50%);
    height: 140rpx;
    width: 140rpx;
    border-radius: 24rpx;
    background-color: #fff;
}

.brand_detail .logo_area image.star {
    position: absolute;
    bottom: -30rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 62rpx;
    height: 62rpx;
}

.brand_detail .logo_area image:first-child {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 140rpx;
    border-radius: 24rpx;
}

.brand_detail .brand_name {
    margin: 20rpx 0;
    padding-top: 60rpx;
    /* height: 44rpx; */
    line-height: 44rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 700;
    letter-spacing: 1px;
    color: #112a51;
}

.brand_detail .one_punch_line {
    margin: 10rpx 0;
    line-height: 44rpx;
    text-align: center;
    font-size: 28rpx;
    letter-spacing: 1px;
    color: #112a51;
}

.brand_detail .leaf_type {
    margin-bottom: 10rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 26rpx;
    letter-spacing: 1px;
    color: rgb(138, 140, 150);
}

.brand_detail .hight_light {
    display: flex;
    padding: 20rpx 0 0;
    font-size: 32rpx;
}

.brand_detail .hight_light .hight_light_item {
    flex: 1;
    text-align: center;
}

.brand_detail .hight_light .hight_light_item image {
    width: 44rpx;
    height: 40rpx;
}

.brand_detail .hight_light .hight_light_item .diff {
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    overflow: hidden;
    font-size: 28rpx;
    font-weight: 700;
    opacity: 0.6;
    color: #112a51;
}

.brand_detail .story {
    padding: 32rpx 0;
    line-height: 40rpx;
    font-size: 28rpx;
    opacity: 0.5;
    color: #112a51;
    letter-spacing: 2.16rpx;
}

