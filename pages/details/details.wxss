/* pages/details/details.wxss */

page {
    height: 100%;
}

.content_has_padding {
    background-image: url(https://dongdakid.com/assets/images/bg_detail@2x.png);
    /* background-image: url(http://192.168.100.115:9000/assets/images/bg_detail@2x.png);  */
}

.brand_info {
    margin-top: 700rpx;
    padding: 40rpx;
    border-radius: 24rpx;
    background-color: #fff;
}
.brand_info_checked {
    margin-top: 550rpx;
    padding: 40rpx;
    border-radius: 24rpx;
    background-color: #fff;
}
.brand_detail {
    position: relative;
}

.got_egg {
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 32rpx;
    width: 590rpx;
    height: 766rpx;
    background: #ffdc6c;
    border-radius: 24rpx;
    color: #fff;
}

.got_egg .light {
    position: absolute;
    top: 0;
    width: 286rpx;
    height: 310rpx;
}

.got_egg .light_one {
    left: 0;
}

.got_egg .light_one_center {
    left: 50%;
    transform: translateX(-50%);
}

.got_egg .light_two {
    right: 0;
}

.got_egg .title {
    margin-top: 40rpx;
    text-align: center;
    height: 84rpx;
    font-size: 60rpx;
    line-height: 84rpx;
}

.got_egg .egg_type {
    position: relative;
    margin-top: 20rpx;
}

.got_egg .egg_type .egg_coin_area {
    display: flex;
}

.got_egg .egg_type .egg_coin_area .egg_coin_flex {
    flex: 1;
    text-align: center;
}

.egg_pic {
    width: 158rpx;
    height: 200rpx;
}

.egg_coin {
    margin-top: 62rpx;
    width: 72rpx;
    height: 76rpx;
}

.got_egg .egg_type .egg_text {
    margin: 10rpx 0 20rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 36rpx;
}

.got_egg .egg_check {
    margin: 20rpx 0 40rpx;
    text-align: center;
}

.got_egg .egg_check image {
    width: 280rpx;
    height: 112rpx;
}

.got_egg .egg_checked {
    margin-top: 200rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 36rpx;
}
.got_egg .egg_explain {
    margin: 20rpx 0;
    line-height: 32rpx;
    text-align: center;
    opacity: 0.8;
    font-size: 22rpx;
}

.brand_detail .logo_area {
    position: absolute;
    top: -50rpx;
    left: 50%;
    transform: translateX(-50%);
    height: 140rpx;
    width: 140rpx;
    border-radius: 24rpx;
    box-shadow: 0 4px 10px 0 rgba(59, 105, 181, 0.16);
    background-color: #fff;
}

.brand_detail .logo_area image.star {
    position: absolute;
    bottom: -30rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 62rpx;
    height: 62rpx;
}

.brand_detail .logo_area image:first-child {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 140rpx;
    border-radius: 24rpx;
}

.brand_detail .brand_name {
    margin: 20rpx 0;
    padding-top: 60rpx;
    line-height: 44rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 700;
    letter-spacing: 1px;
    color: #112a51;
}

.brand_detail .one_punch_line {
    margin: 10rpx 0;
    line-height: 44rpx;
    text-align: center;
    font-size: 28rpx;
    letter-spacing: 1px;
    color: #112a51;
}

.brand_detail .leaf_type {
    margin-bottom: 10rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 26rpx;
    letter-spacing: 1px;
    color: rgb(138, 140, 150);
}

.brand_detail .hight_light {
    display: flex;
    padding: 20rpx 0 0;
    margin-bottom: 32rpx;
    font-size: 32rpx;
}

.brand_detail .hight_light .hight_light_item {
    flex: 1;
    text-align: center;
}

.brand_detail .hight_light .hight_light_item image {
    width: 44rpx;
    height: 40rpx;
}

.brand_detail .hight_light .hight_light_item .diff {
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    overflow: hidden;
    font-size: 28rpx;
    font-weight: 700;
    opacity: 0.6;
    color: #112a51;
}

.brand_detail .story {
    height: 120rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    opacity: 0.5;
    color: #112a51;
    letter-spacing: 2.16rpx;
    overflow:hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.brand_detail .story_all {
    line-height: 40rpx;
    font-size: 28rpx;
    opacity: 0.5;
    color: #112a51;
    letter-spacing: 2.16rpx;
}

.brand_descript .descript_content {
    line-height: 42rpx;
    font-size: 30rpx;
    color: #34384a;
    letter-spacing: 1px;
}

.no_egg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}

.no_egg image {
    position: relative;
    width: 112rpx;
    height: 148rpx;
}

.no_egg view:first-child {
    margin: 40rpx;
    font-size: 16px;
    color: #34384a;
    text-align: center;
}

.no_egg view:last-child {
    margin: 40rpx;
    font-size: 14px;
    color: #5f6270;
    text-align: center;
}
