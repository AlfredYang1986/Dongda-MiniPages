/**index.wxss**/
@import "../../utils/weui.wxss";

page {
    height: 100%;
}

.container {
    position: relative;
    height: 100%;
    background-image: url(https://dongdakid.com/assets/images/activity_bg@2x.png);
    /* background-image: url(http://192.168.100.115:9000/assets/images/activity_bg@2x.png);  */
    background-repeat: no-repeat;
    background-size: cover;
}

.goldegg {
    height: 100%;
     background-image: url(https://dongdakid.com/assets/images/activity.png); 
    /* background-image: url(http://192.168.100.115:9000/assets/images/activity.png);  */
    background-repeat: no-repeat;
    background-size: 100%;
    background-position-y: bottom;
}

.goldegg image {
    width: 100%;
    overflow: hidden;
}

.button-area {
    position: absolute;
    width: 100%;
    bottom: 40rpx;
}

.weui-flex {
    margin: 0 10rpx;
}

.weui-flex__item {
    position: relative;
}

.choose_role {
    margin-bottom: 20rpx;
}

.choose_role .weui-flex__item:first-child {
    padding-right: 5rpx;
}

.choose_role .weui-flex__item:last-child {
    padding-left: 5rpx;
}

.choose_role .role {
    position: absolute;
    top: 0;
    width: 100%;
    height: 140rpx;
    background-color: transparent;
}

.btn {
    width: 100%;
    height: 140rpx;
}

.btn_active {
    position: absolute;
    left: 10rpx;
    top: 0;
    width: 100%;
    height: 140rpx;
    background-color: transparent;
}

.bg_img {
    height: 100%;
    width: 100%;
}

.privacy {
    text-align: center;
    font-size: 30rpx;
    color: #112a51;
    padding-top: 40rpx;
}
