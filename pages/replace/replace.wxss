/* pages/replace/replace.wxss */

page {
    height: 100%;
}

.content_has_padding {
     background-image: url(https://dongdakid.com/assets/images/bg_detail@2x.png); 
    /* background-image: url(http://192.168.100.115:9000/assets/images/bg_detail@2x.png);  */
}

.brand_info {
    padding: 32rpx;
    border-radius: 24rpx;
    background-color: #fff;
}

.brand_detail {
    position: relative;
    margin-top: 102rpx;
}

.brand_address {
    margin: 0 0 40rpx;
    font-size: 0;
    text-align: center;
}

.brand_address image.icon_location {
    display: inline-block;
    margin-bottom: 32rpx;
    width: 40rpx;
    height: 46rpx;
}

.brand_address .address_text {
    margin-bottom: 32rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 28rpx;
    color: #34384a;
}

.brand_address .place {
    display: flex;
}

.brand_address .place .place_item {
    flex: 1;
    text-align: center;
    font-size: 0;
}

.brand_address .place .place_item image {
    width: 116rpx;
    max-height: 118rpx;
}

.brand_address .place .place_item .place_name {
    margin-top: 10rpx;
    height: 32rpx;
    line-height: 32rpx;
    font-size: 22rpx;
    opacity:0.5;
    color: #112A51;
}

.descript .title {
    margin: 20rpx 0;
    height: 40rpx;
    text-align: left;
    font-size: 28rpx;
    font-weight: 700;
    letter-spacing: 2rpx;
    color: #5f6270;
}

.descript .descript_items {
    display: flex;
    margin: 20rpx 0; 
}

.descript .data_left {
    flex: 0 0 20rpx;
    position: relative;
}

.descript .data_left .point {
    position: absolute;
    top: 13rpx;
    display: inline-block;
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
}

.descript .data_left text:last-child {
    font-size: 28rpx;
    letter-spacing: 0.93px;
    color: #112a51;
}

.descript .content_right {
    flex: 1;
    padding-left: 20rpx;
    line-height: 40rpx;
    text-align: left;
    font-size: 28rpx;
    letter-spacing: 0.93px;
    color: #5f6270;
}

.brand_detail .logo_area {
    position: absolute;
    top: -70rpx;
    left: 50%;
    transform: translateX(-50%);
    height: 140rpx;
    width: 140rpx;
    border-radius: 24rpx;
    box-shadow: 0 4px 10px 0 rgba(59,105,181,0.16);
    background-color: #fff;
}

.brand_detail .logo_area image.star {
    position: absolute;
    bottom: -30rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 62rpx;
    height: 62rpx;
}

.brand_detail .logo_area image:first-child {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 140rpx;
    border-radius: 24rpx;
    max-height: 140rpx;
}

.brand_detail .brand_name {
    margin-bottom: 10px;
    padding-top: 87rpx;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 700;
    letter-spacing: 1px;
    color: #112a51;
}

.brand_detail .one_punch_line {
    line-height: 44rpx;
    text-align: center;
    font-size: 28rpx;
    letter-spacing: 1px;
    color: #112a51;
}

.brand_detail .leaf_type {
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 26rpx;
    letter-spacing: 1px;
    color: rgb(138, 140, 150);
}

.brand_detail .hight_light {
    display: flex;
    padding: 24px 0;
    font-size: 32rpx;
}

.brand_detail .hight_light .hight_light_item {
    flex: 1;
    text-align: center;
}

.brand_detail .hight_light .hight_light_item image {
    width: 44rpx;
    height: 40rpx;
}

.brand_detail .hight_light .hight_light_item .diff {
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
    font-size: 30rpx;
    font-weight: 700;
    opacity: 0.6;
    color: #112a51;
}

.brand_detail .story {
    height: 108rpx;
    line-height: 36rpx;
    font-size: 26rpx;
    opacity: 0.5;
    color: #112a51;
    letter-spacing: 1px;
    overflow:hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.brand_detail .story_all {
    line-height: 36rpx;
    font-size: 26rpx;
    opacity: 0.5;
    color: #112a51;
    letter-spacing: 1px;
}
.brand_descript {
    margin-bottom: 20rpx;
    position: relative;
}

.brand_descript .child {
    position: absolute;
    top: 0;
    right: 40rpx;
    width: 60rpx;
    height: 68rpx;
}

.descript_title {
    margin: 20rpx 0;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 44rpx;
    text-align: center;
    letter-spacing: 1px;
    color: #34384a;
}

.brand_descript .title {
    font-size: 0;
    margin-bottom: 10rpx;
}

.brand_descript .title text {
    display: inline-block;
    height: 42rpx;
    line-height: 42rpx;
    vertical-align: middle;
}

.brand_descript .title text:last-child {
    font-size: 30rpx;
    font-weight: 700;
    letter-spacing: 1px;
    color: #112a51;
}

.brand_descript .title .point {
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.point_green {
    background: #59d5c7;
}

.point_yellow {
    background: #ffdc6c;
}

.brand_descript .descript_content {
    line-height: 42rpx;
    font-size: 30rpx;
    color: #34384a;
    letter-spacing: 1px;
}
