    <view class='game_cloud'>
        <image src='../../utils/images/game_cloud@2x.png' mode='widthFilled'></image>
    </view>
    <view class='activity_wrapper'>
        <view class='list'>
            <image src='../../utils/images/btn_list@2x.png'></image>
            <button bindtap='list'></button>
        </view>

        <view class='score_mission'>
            <view class='s_m_item score'>
                <image src='../../utils/images/btn_score@2x.png'></image>
                <button bindtap='score'></button>
            </view>
            <view class='s_m_item  mission'>
                <image src='../../utils/images/btn_mission@2x.png'></image>
                <button bindtap='mission'></button>
            </view>
        </view>

    </view>
    <view class='scan_qr'>
        <image src='../../utils/images/checkin@2x.png' mode='widthFilled'></image>
        <button class="scan" bindtap='scanQr'></button>
    </view>
</view>

