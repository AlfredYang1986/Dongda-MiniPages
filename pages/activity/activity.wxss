/* pages/activity/activity.wxss */
@import "../../utils/weui.wxss";
page {
    height: 100%;
}
.content_no_padding {
    height: 100%;
    background-image: url(http://192.168.100.115:9000/assets/images/game_bg@2x.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.activity_wrapper {
    margin-top: -52rpx;
}

.user_avatar_android {
    padding: 144rpx 0 60rpx;
}
.user_avatar {
    padding: 128rpx 0 60rpx;
    height: 120rpx;
    text-align: center;
}
.user_avatar_iosx {
    padding: 176rpx 0 60rpx;
}

.user_avatar .avatar {
    display: inline-block;
    border: 2rpx solid #eee;
    border-radius: 50%;
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
}
.game_cloud {
    padding: 0 40rpx;
    text-align: center;
}
.game_cloud image {
    width: 426rpx;
    height: 272rpx;
}



.list {
    position: relative;
    padding: 0 40rpx;
}
.list image {
    width: 100%;
    height: 308rpx;
}
.list button {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
}


.score_mission {
    position: relative;
    padding: 0 40rpx;  
    height: 144rpx;
}
.score_mission .s_m_item {
    display: inline-block;
    position: relative;
}
.score_mission .score {
    float: left;
}
.score_mission .mission {
    float: right;
}
.score_mission .s_m_item image {
    width: 320rpx;
    height: 144rpx;
}
.score_mission .s_m_item button {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
}

.scan_qr {
    position: absolute;
    bottom: 60rpx;
    left: 50%;
    transform: translateX(-50%);
}
.scan_qr image {
    width: 200rpx;
    height: 195rpx;
}
.scan_qr .scan {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
}