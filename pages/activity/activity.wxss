/* pages/activity/activity.wxss */
@import "../../utils/weui.wxss";

page {
    height: 100%;
}

.first_know_play {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 10;
    background-color: rgba(20, 34, 57, 0.7);
}
.first_know_play image{
    width: 700rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.content_no_padding {
    height: 100%;
    background-image: url(https://dongdakid.com/assets/images/game_bg@2x.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.activity_wrapper {
    margin-top: -55rpx;
}

.user_avatar_android {
    padding: 144rpx 40rpx 60rpx;
    height: 120rpx;
}

.user_avatar_iosx {
    padding: 176rpx 40rpx 60rpx !important;
}

.user_avatar {
    padding: 128rpx 40rpx 60rpx;
    height: 120rpx;
}

.avatar_area .avatar_content {
    position: relative;
    margin-top: 40rpx;
}

.avatar_area .myeggs {
    width: 304rpx;
    height: 112rpx;
}

.avatar_area .avatar {
    position: absolute;
    left: 16rpx;
    top: 44%;
    transform: translateY(-50%);
    display: inline-block;
    border: 2rpx solid #fff;
    border-radius: 50%;
    width: 80rpx;
    height: 80rpx;
    overflow: hidden;
}

.avatar_area .avatar_btn {
    position: absolute;
    left: 0;
    top: 0;
    width: 304rpx;
    height: 112rpx;
    border-radius: 24rpx;
    background-color: transparent;
}

.game_cloud {
    padding: 0 40rpx;
    text-align: center;
}

.game_cloud image {
    width: 408rpx;
    height: 260rpx;
}

.list {
    position: relative;
    padding: 0 40rpx;
}

.list image {
    width: 100%;
}

.list button {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
}

.challenge {
    position: relative;
    text-align: center;
}

.challenge image {
    width: 732rpx;
}

.challenge button {
    position: absolute;
    top: 0;
    width: 100%;
    height: 176rpx;
    background-color: transparent;
}

.score_mission {
    position: relative;
    padding: 0 40rpx;
    height: 144rpx;
}

.score_mission .s_m_item {
    display: inline-block;
    position: relative;
}

.score_mission .score {
    float: left;
}

.score_mission .mission {
    float: right;
}

.score_mission .s_m_item image {
    width: 320rpx;
    height: 144rpx;
}

.score_mission .s_m_item button {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
}

.scan_qr {
    position: absolute;
    bottom: 60rpx;
    left: 50%;
    transform: translateX(-50%);
}

.scan_qr image {
    width: 200rpx;
    height: 195rpx;
}

.scan_qr .scan {
    position: absolute;
    left: 0;
    top: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
}
