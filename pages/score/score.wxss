/* pages/score/score.wxss */

page {
    height: 100%;
}

.eggs_total {
    position: relative;
    z-index: 2;
    margin: 60rpx 0 20rpx;
}

.eggs_total .total image:first-child {
    width: 196rpx;
}

.eggs_total .total .total_num {
    position: absolute;
    display: inline-block;
    top: 16rpx;
    left: 116rpx;
    width: 100rpx;
    font-size: 32rpx;
    font-weight: 700;
    letter-spacing: 1px;
    color: #fff;
}

.rainbow {
    position: absolute;
    z-index: -1;
    top: -60rpx;
    left: 28rpx;
    height: 70rpx;
    overflow: hidden;
}

.rainbow image {
    animation: rainbow 1.8s linear 0s infinite;
    width: 140rpx;
    height: 140rpx;
}

.eggs_line {
    margin-top: 30rpx;
}

.eggs_line .egg {
    position: relative;
    display: inline-block;
    width: 324rpx;
    height: 480rpx;
}

.eggs_line .egg_big {
    position: relative;
    display: inline-block;
    width: 100%;
    height: 480rpx;
}

.eggs_line .egg_big .egg_bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.eggs_line .egg:last-child {
    float: right;
}

.eggs_line .egg .egg_bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 320rpx;
}

.eggs_line .egg .egg_item, .eggs_line .egg_big .egg_item {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 158rpx;
    height: 200rpx;
}

.eggs_line .egg .egg_bottom, .eggs_line .egg_big .egg_bottom {
    position: absolute;
    bottom: 50rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 118rpx;
    height: 84rpx;
}

.eggs_line .egg .egg_count, .eggs_line .egg_big .egg_count {
    position: absolute;
    bottom: 24rpx;
    right: 12rpx;
    display: inline-block;
    height: 62rpx;
    font-weight: 700;
    font-size: 44rpx;
    line-height: 62rpx;
    letter-spacing: 0;
    color: rgb(255, 220, 108);
}

.eggs_line .egg .show_hint, .eggs_line .egg_big .show_hint {
    position: absolute;
    padding: 0;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 240rpx;
    height: 120rpx;
    border-radius: 24rpx;
    background-color: transparent;
}

.eggs_explain {
    position: relative;
    margin-top: 120rpx;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.8);
}

.eggs_explain .egg_title {
    position: absolute;
    left: 50%;
    top: -49rpx;
    transform: translateX(-50%);
    z-index: 2;
    width: 520rpx;
    height: 98rpx;
    line-height: 98rpx;
    border-radius: 24rpx;
    font-size: 48rpx;
    font-family: SFProText-Heavy;
    font-weight: 700;
    text-align: center;
    color: #fff;
    background-color: #ffdc6c;
}

.eggs_explain .egg_content {
    margin-bottom: 20rpx;
    padding: 59rpx 32rpx 60rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: #5f6270;
}

.eggs_explain .egg_content .title {
    margin: 20rpx 0;
    font-size: 14px;
    font-weight: 700;
    color: #34384a;
}

.hint {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 10;
    background-color: rgba(20, 34, 57, 0.7);
}

.hint .hint_content {
    position: absolute;
    margin: 0 40rpx;
    padding: 60rpx 32rpx 30rpx;
    top: 50%;
    width: 606rpx;
    transform: translateY(-50%);
    border-radius: 24rpx;
    background: rgba(255, 255, 255, 0.9);
}

.hint .hint_content .egg_title {
    position: absolute;
    left: 50%;
    top: -46rpx;
    transform: translateX(-50%);
    z-index: 2;
    width: 298rpx;
    height: 92rpx;
    background: #ffdc6c;
    border-radius: 92rpx;
    font-size: 32rpx;
    font-weight: 700;
    line-height: 92rpx;
    text-align: center;
    letter-spacing: 1.07px;
    color: #fff;
}

.hint .hint_content .egg_content {
    margin-bottom: 20rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    letter-spacing: 1px;
    color: #34384a;
}

.hint .hint_content .egg_content .title {
    margin: 10rpx 0;
    line-height: 44rpx;
    font-size: 32rpx;
    font-weight: 700;
    color: #34384a;
}

.hint .hint_content .egg_content .content {
    line-height: 40rpx;
    font-size: 28rpx;
    color: #5f6270;
}

.hint .hint_content .egg_close {
    position: relative;
    text-align: center;
}

.hint .hint_content .egg_close image {
    width: 72rpx;
    height: 72rpx;
}

.hint .hint_content .egg_close .hint_close {
    position: absolute;
    top: 0rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 140rpx;
    height: 80rpx;
    background-color: transparent;
}

@-webkit-keyframes rainbow {
    0% {
        transform: rotate(0deg);
    }

    25% {
        transform: rotate(90deg);
    }

    50% {
        transform: rotate(180deg);
    }

    75% {
        transform: rotate(270deg);
    }

    100% {
        transform: rotate(360deg);
    }
}
