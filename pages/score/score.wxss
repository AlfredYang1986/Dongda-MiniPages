page {
    height: 100%;
}

.score_wrapper {
}

.eggs_line {
}

.eggs_line .egg {
    position: relative;
    display: inline-block;
    width: 320rpx;
    height: 442rpx;
}

.eggs_line .egg:last-child {
    float: right;
}

.eggs_line .egg .egg_bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.eggs_line .egg .egg_item {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 158rpx;
    height: 200rpx;
}

.eggs_line .egg .egg_bottom {
    position: absolute;
    bottom: 50rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 118rpx;
    height: 84rpx;
}

.eggs_line .egg .egg_count {
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    display: inline-block;
    height: 62rpx;
    font-weight: 700;
    font-size: 52rpx;
    line-height: 62rpx;
    color: #fff;
}

.eggs_explain {
    position: relative;
    margin-top: 80rpx;
    
    border-radius: 12px;
    background: rgba(255,255,255,.8);  
    
}
.eggs_explain .egg_title {
    position: absolute;
    left: 50%;
    top: -59rpx;
    transform: translateX(-50%);
    z-index: 2;
    width: 520rpx;
    height: 98rpx;
    background: #FFDC6C;
    border-radius: 12px;
    font-size: 48rpx;
    line-height: 98rpx;
    text-align: center;
    letter-spacing: 1px;
    opacity: 1; 
    color: #fff;
}
.eggs_explain .egg_content {
    /* position: absolute;  */
    margin-bottom: 20rpx;
    padding: 59rpx 20rpx 40rpx;
    font-size: 28rpx;
    color: #5F6270;
    /* opacity: 0.8;  
    border-radius: 12px;
    background: #fff;  */
}
.score_wrapper .score_title {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 48rpx;
}

.back_activity {
    text-align: center;
    font-size: 48rpx;
    color: #fff;
}
