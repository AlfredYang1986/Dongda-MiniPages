/* pages/score/score.wxss */

page {
    height: 100%;
}

.score_wrapper {
}

.eggs_total {
    position: relative;
    /* margin: 30rpx 0; */
    /* height: 78rpx; */
}

.eggs_total .total image:first-child {
    width: 196rpx;
}

.eggs_total .total .total_num {
    position: absolute;
    display: inline-block;
    /* top: 50%; *//* transform: translateY(-50%); */
    top: 16rpx;
    left: 120rpx;
    /* height: 38rpx; */
    width: 100rpx;
    font-size: 32rpx;
    letter-spacing: 1px;
    color: #fff;
}

.eggs_line {
}

.eggs_line .egg {
    position: relative;
    display: inline-block;
    width: 324rpx;
    height: 480rpx;
}

.eggs_line .egg_big {
    position: relative;
    display: inline-block;
    width: 100%;
    height: 480rpx;
}

.eggs_line .egg_big .egg_bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    /* height: 238rpx; */
}

.eggs_line .egg:last-child {
    float: right;
}

.eggs_line .egg .egg_bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 320rpx;
}

.eggs_line .egg .egg_item, .eggs_line .egg_big .egg_item {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 158rpx;
    height: 200rpx;
}

.eggs_line .egg .egg_bottom, .eggs_line .egg_big .egg_bottom {
    position: absolute;
    bottom: 50rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 118rpx;
    height: 84rpx;
}

.eggs_line .egg .egg_count, .eggs_line .egg_big .egg_count {
    position: absolute;
    bottom: 24rpx;
    right: 10rpx;
    display: inline-block;
    height: 62rpx;
    font-weight: 700;
    font-size: 52rpx;
    line-height: 62rpx;
    color: #fff;
}

.eggs_line .egg .show_hint, .eggs_line .egg_big .show_hint {
    position: absolute;
    padding: 0;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 240rpx;
    height: 120rpx;
    border-radius: 24rpx;
    background-color: transparent;
}

.eggs_explain {
    position: relative;
    margin-top: 80rpx;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.8);
}

.eggs_explain .egg_title {
    position: absolute;
    left: 50%;
    top: -59rpx;
    transform: translateX(-50%);
    z-index: 2;
    width: 520rpx;
    height: 98rpx;
    background: #ffdc6c;
    border-radius: 12px;
    font-size: 48rpx;
    line-height: 98rpx;
    text-align: center;
    letter-spacing: 1px;
    opacity: 1;
    color: #fff;
}

.eggs_explain .egg_content {
    /* position: absolute;  */
    margin-bottom: 20rpx;
    padding: 59rpx 20rpx 40rpx;
    font-size: 28rpx;
    color: #5f6270;
    /* opacity: 0.8;  
    border-radius: 12px;
    background: #fff;  */
}

.score_wrapper .score_title {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 48rpx;
}

.back_activity {
    text-align: center;
    font-size: 48rpx;
    color: #fff;
}

.hint {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 10;
    /* width: 100%;
    height: 100%; *//* opacity: 0.7; */
    background-color: rgba(20, 34, 57, 0.7);
    /* background: #142239; */
}

.hint .hint_content {
    position: relative;
    margin: 0 40rpx;
    padding-bottom: 40rpx;
    top: 50%;
    transform: translateY(-50%);
    /* margin-top: 80rpx; */
    border-radius: 24rpx;
    background: rgb(255, 255, 255);
}

.hint .hint_content .egg_title {
    position: absolute;
    left: 50%;
    top: -46rpx;
    transform: translateX(-50%);
    z-index: 2;
    width: 298rpx;
    height: 92rpx;
    background: #ffdc6c;
    border-radius: 92rpx;
    font-size: 32rpx;
    line-height: 92rpx;
    text-align: center;
    letter-spacing: 1px;
    color: #fff;
}

.hint .hint_content .egg_content {
    /* position: absolute;  */
    margin-bottom: 20rpx;
    padding: 59rpx 32rpx 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #34384a;
    letter-spacing: 1px;
    /* opacity: 0.8;  
    border-radius: 12px;
    background: #fff;  */
}

.hint .hint_content .egg_close {
    position: relative;
    
    text-align: center;
}

.hint .hint_content .egg_close image {
    width: 72rpx;
    height: 72rpx;
}

.hint .hint_content .egg_close .hint_close {
    position: absolute;
    top: 0rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 140rpx;
    height: 80rpx;
    background-color: transparent; 
}
