<!--pages/score/score.wxml-->
<view class='content_no_padding'>
    <view class="navigationBar {{android?'android':'nav'}} {{iosX?'iosx':''}}">
        <view class='backArea'>
            <image src='../../utils/images/icon_back@2x.png'></image>
            <button class='btn_back' size='mini' bindtap='backBeforePage'></button>
        </view>
        <view class='navigationTitle'>
            <text>分数</text>
        </view>
    </view>
    <view class="userinfo" wx:if="{{canIuseAvatar}}">
        <open-data type="userAvatarUrl" class='user_avatar'></open-data>
        <open-data type="userNickName" class="user_nickname"></open-data>
    </view>
    <view class="userinfo" wx:if="{{!canIuseAvatar}}">
        <image src='{{userAvatar}}' class='user_avatar'></image>
         <!-- <text class="user_nickname">{{userNickname}}</text>  -->
    </view>
    <view class='score_wrapper' wx:if="{{hasScores}}">
        <view class='score_title'>普通打卡分数</view>
        <view class='score_num'>{{scores.scores_A}}</view>
        <view class='score_title'>高级打卡分数</view>
        <view class='score_num'>{{scores.scores_B}}</view>
        <view class='score_title'>答题分数</view>
        <view class='score_num'>{{scores.scores_C}}</view>
    </view>
    <view class='back_activity' wx:else>
        <view>暂未参加任何活动</view>
    </view>
    
</view>

