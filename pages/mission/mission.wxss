/* pages/mission/mission.wxss */
page {
    height: 100%;
}
.content_has_padding {
    background-image: url(http://192.168.100.115:9000/assets/images/bg_star@2x.png);
}

.top_blank {
    height: 160rpx;
}

.didi_area {
    margin-top: 20rpx;
    height: 294rpx;
    border-radius: 24rpx;
    background: #FF964F;
}

.items {
    position: relative;
    margin: 60rpx 0;
    padding: 30rpx;
    border-radius: 24rpx;
    background-color: #fff;
}

.items:last-child {
    margin-bottom: 0;
}

.items .brand_logo {
    position: absolute;
    right: 40rpx;
    top: -40rpx;
    width: 160rpx;
    height: 160rpx;
    border: 3px solid #FEE594;
    border-radius: 24rpx;
    background-color: #fff;
    /* box-shadow: 0 4px 8px 4px lightblue; */
}
.items .brand_logo_star {
    position: absolute;
    right: 100rpx;
    top: 98rpx;
    width: 50rpx;
    height: 48rpx;
}
.items .checked {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 102rpx;
    height: 102rpx;
}

.items .brand_name {
    /* height: 50rpx; */
    margin-bottom: 20rpx;
    padding-right: 180rpx;
    line-height: 56rpx;
    font-size: 44rpx;
    font-weight: 700;
    letter-spacing: 1px;
    color: #112A51;
}
.items .brand_name text {
    padding-left: 20rpx;
    line-height: 56rpx;
    font-size: 26rpx;
    font-weight: 100;
    color: #8A8C96;
    /* text-align: center; */
}

.items .brand_type {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    letter-spacing: 1px;
}

