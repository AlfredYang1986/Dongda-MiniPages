/* pages/mission/mission.wxss */

page {
    height: 100%;
}

.content_has_padding {
    background-image: url(https://dongdakid.com/assets/images/bg_star@2x.png);
}

.top_blank {
    height: 160rpx;
}

.didi_area {
    margin-top: 20rpx;
    /* height: 294rpx; */
    border-radius: 24rpx;
    /* background: #FF964F; */
}

.didi_area image {
    width: 100%;
}

.items {
    position: relative;
    margin: 60rpx 0;
    padding: 30rpx;
    border-radius: 24rpx;
    background-color: #fff;
}

.items .brand_address {
    /* position: relative; */
    padding: 0 0 10rpx;
    margin: 0 0 10rpx;
    border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
    font-size: 0;
    text-align: center;
}

.items .brand_address image {
    width: 22rpx;
    height: 26rpx;
}

.items .brand_address text {
    padding-left: 10rpx;
    line-height: 44rpx;
    font-size: 32rpx;
    font-weight: 700;
    letter-spacing: 1px;
    color: #112a51;
}

.items .brand_logo_area {
    height: 120rpx;
}

.items .brand_logo_area .brand_logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 110rpx;
    height: 110rpx;
    border: 3px solid #fee594;
    border-radius: 24rpx;
    background-color: #fff;
}

.items .brand_logo_area .brand_logo image:first-child {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 110rpx;
}

.items .brand_logo_area .brand_logo image.star {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -20rpx;
    width: 50rpx;
    height: 48rpx;
}

.items:last-child {
    margin-bottom: 0;
}


.items .checked {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 102rpx;
    height: 102rpx;
}

.items .brand_name {
    margin: 20rpx 0;
    /* height: 44rpx; */
    line-height: 44rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 700;
    letter-spacing: 1px;
    color: #112a51;
}

.items .brand_type {
    margin: 10rpx 0;
    /* height: 36rpx; */
    line-height: 36rpx;
    text-align: center;    
    font-size: 26rpx;
    /* font-weight: 100; */
    color: #8a8c96;
    /* text-align: center; */
}



.items .brand_difference {
     display: flex; 
    /* padding: 20rpx 0; */
}

.items .brand_difference .brand_differenct_item {
     flex: 1;
     text-align: center;
}
.items .brand_difference .brand_differenct_item .diff {
     display: inline-block; 
    padding: 0 8rpx; 
    margin: 0 auto;
    width: 144rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 40rpx;
    font-size: 26rpx;
    color: #fff;
    background-color: #ffc859;
}
.bottom_blank {
    height: 20rpx;
}
