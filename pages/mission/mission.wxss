/* pages/mission/mission.wxss */

page {
    height: 100%;
}

.content_has_padding {
     background-image: url(https://dongdakid.com/assets/images/bg_star@2x.png); 
    /* background-image: url(http://192.168.100.115:9000/assets/images/bg_star@2x.png);  */

}

.top_blank {
    height: 160rpx;
}

.didi_area {
    margin-top: 20rpx;
    border-radius: 24rpx;
}

.didi_area image {
    width: 100%;
}

.items {
    position: relative;
    margin: 60rpx 0;
    padding-bottom: 32rpx;
    border-radius: 24rpx;
    background-color: #fff;
}

.items .brand_address {
    padding: 32rpx;
    margin: 0 0 10rpx;
    border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
    font-size: 0;
    text-align: center;
}

.items .brand_address image {
    width: 22rpx;
    height: 26rpx;
}

.items .brand_address text {
    padding-left: 10rpx;
    line-height: 44rpx;
    font-size: 32rpx;
    font-weight: 700;
    letter-spacing: 1px;
    color: #112a51;
}

.items .brand_logo_area {
    padding: 10rpx 0;
    height: 120rpx;
}

.items .brand_logo_area .brand_logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 110rpx;
    height: 110rpx;
    border-radius: 24rpx;
    background-color: #fff;
}

.items .brand_logo_area .brand_logo image:first-child {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 110rpx;
    max-height: 110rpx;
}

.items .brand_logo_area .brand_logo image.star {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -25rpx;
    width: 50rpx;
    height: 50rpx;
}

.items:last-child {
    margin-bottom: 0;
}

.items .checked {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 102rpx;
    height: 102rpx;
}

.items .brand_name {
    margin: 20rpx 0 10rpx;
    line-height: 44rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 700;
    letter-spacing: 1px;
    color: #112a51;
}

.items .brand_type {
    margin: 10rpx;
    line-height: 36rpx;
    text-align: center;
    font-size: 26rpx;
    color: #8a8c96;
}

.items .brand_difference {
    display: flex;
}

.items .brand_difference .brand_differenct_item {
    flex: 1;
    text-align: center;
}

.items .brand_difference .brand_differenct_item .diff {
    display: inline-block;
    margin: 0 auto;
    width: 144rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 48rpx;
    font-size: 22rpx;
    color: #fff;
    background-color: #ffc859;
}

 .items .brand_difference .brand_differenct_item:first-child {
    text-align: right;
}

.items .brand_difference .brand_differenct_item:last-child  {
    text-align: left;
} 

.bottom_blank {
    height: 20rpx;
}


.hint {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 10;
    background-color: rgba(20, 34, 57, .7);
 
}

.hint .hint_content {
    position: absolute;
    margin: 0 40rpx;
    padding: 32rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 80%;
    text-align: center;
    border-radius: 24rpx;
    background: rgba(255, 255, 255, 0.9);
}


.hint .hint_content .egg_content {
    margin-bottom: 20rpx;
    padding: 59rpx 32rpx 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    letter-spacing: 1px;
    color: #34384a;
}

.hint .hint_content .egg_close {
    position: relative;
    text-align: center;
}

.hint .hint_content .egg_close image {
    width: 72rpx;
    height: 72rpx;
}

.hint .hint_content .egg_close .hint_close {
    position: absolute;
    top: 0rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 140rpx;
    height: 80rpx;
    background-color: transparent;
}